<div class="row">
  <div class="row__background">
    <div class="row__item row__image">
      <img src={{imgUrl}} alt={{imgDescription}}>
    </div>
    <div class="row__item row__text">
      <div class="row__title">
        <p>{{title}}</p>
      </div>
      <div class="row__subtitle row__subtitle--ellipsis">
        <p>{{subtitle}}</p>
      </div>
    </div>
  </div>
</div>